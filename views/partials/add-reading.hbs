<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <div class="columns is-multiline">
    <div class="field column is-half">
      <label class="label">Code</label>
      <div class="control">
        <div class="select is-fullwidth is-rounded">
          <select name="code">
            <option>Select Code</option>
            <option value="100">100</option>
            <option value="200">200</option>
            <option value="300">300</option>
            <option value="400">400</option>
            <option value="500">500</option>
            <option value="600">600</option>
            <option value="700">700</option>
            <option value="800">800</option>
          </select>
        </div>
      </div>
    </div>
    <div class="field column is-half">
      <label class="label">Temperature</label>
      <div class="control">
        <input class="input is-rounded" placeholder="00.00 C" type="number" name="temp" step="0.01">
      </div>
    </div>
    <div class="field column is-half">
      <label class="label">Wind Speed</label>
      <div class="control">
        <input class="input is-rounded" placeholder="00.00 K/mH" type="number" name="windSpeed" step="0.01" min="0"
          max="117">
      </div>
    </div>
    <div class="field column is-half">
      <label class="label">Wind Direction</label>
      <div class="control">
        <input class="input is-rounded" placeholder="000.00 deg" type="number" name="windDirection" step="0.01" min="0"
          max="360">
      </div>
    </div>
    <div class="field column is-half">
      <label class="label">Pressure</label>
      <div class="control">
        <input class="input is-rounded" placeholder="000 hpa" type="number" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Reading</button>
</form>