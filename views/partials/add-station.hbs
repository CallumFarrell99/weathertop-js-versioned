<form action="/dashboard/addstation" method="POST">
  <div class="columns">
    <div class="field column">
      <label class="label">Station Name</label>
      <div class="control">
        <input class="input is-rounded" type="text" placeholder="Enter station name" name="name">
      </div>
    </div>
    <div class="field column">
      <label class="label">Longitude</label>
      <div class="control">
        <input class="input is-rounded" placeholder="00.000 deg" type="number" name="longitude" step="0.001" min="-180"
          max="180">
      </div>
    </div>
    <div class="field column">
      <label class="label">Latitude</label>
      <div class="control">
        <input class="input is-rounded" placeholder="00.000 deg" type="number" name="latitude" step="0.001" min="-90"
          max="90">
      </div>
    </div>
  </div>
  <button class="button is-link">Add Station</button>
</form>